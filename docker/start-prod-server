#!/usr/bin/env bash

if [ -n "$PROJECT_DIR" ] && [ -n "$DOCKER_DIR" ]; then
  echo "Starting local project server."
  echo ""

  source "$PROJECT_DIR/.env"
  source "$PROJECT_DIR/.env.prod"

  export PROD_DB_HOST
  export PROD_DB_PORT
  export PROD_DB_NAME
  export PROD_DB_USER
  export PROD_DB_PASSWORD

  echo "Stopping any running server containers..."

  source "$DOCKER_DIR/stop-server"
  source "$DOCKER_DIR/stop-prod-server"

  echo "Starting server...."
  echo ""

  APP_ENV=prod

  export APP_ENV

  docker-compose -f "$PROJECT_DIR/compose-prod.yaml" --env-file "$PROJECT_DIR/.env" up -d --remove-orphans

  echo ""
  echo "Server started in background. Waiting for availability (may take longer on first run)..."
  echo ""

  sleep 5

  WEB_URL="http://$HOSTNAME.local:$WEB_PORT"

  echo "Opening $WEB_URL..."
  echo ""

  open $WEB_URL

  echo "Done. Use './server stop-prod' to quit."
else
  echo "PROJECT_DIR and DOCKER_DIR are required."
fi
