#!/usr/bin/env bash

if [ -n "$PROJECT_DIR" ] && [ -n "$DOCKER_DIR" ]; then
  echo "Stopping container..."
  echo ""

  ENV_FILE="$PROJECT_DIR/.env"

  if [ -f "$ENV_FILE" ]; then
    docker-compose -f "$PROJECT_DIR/compose-prod.yaml" --env-file "$ENV_FILE" stop

    echo ""
    echo "Stopped."
  else
    echo "Environment file $ENV_FILE missing. Aborting."
  fi
else
  echo "PROJECT_DIR and DOCKER_DIR are required."
fi
